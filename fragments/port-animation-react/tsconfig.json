{
  "compilerOptions": {
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es5",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "build",
    "lib": ["es6", "es7", "dom", "es2015"],
    "baseUrl": "src"
  },
  "exclude": ["build", "node_modules", "server", "__tests__"]
}
